<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <prin.open.uniflow.helper.customview.LoaderImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="150dp"
                    android:layout_height="216dp"
                    android:scaleType="fitXY"
                    app:use_gradient="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <prin.open.uniflow.helper.customview.LoaderTextView
                        android:id="@+id/tv_name"
                        style="@style/tv_book_tag"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/pub_black"
                        app:use_gradient="true"
                        />

                    <prin.open.uniflow.helper.customview.LoaderTextView
                        android:id="@+id/tv_author"
                        style="@style/tv_book_tag"
                        android:textColor="@color/pub_black"
                        app:use_gradient="true"/>

                    <prin.open.uniflow.helper.customview.LoaderTextView
                        android:id="@+id/tv_content_count"
                        style="@style/tv_book_tag"
                        android:textColor="@color/pub_black"
                        app:use_gradient="true"/>

                    <prin.open.uniflow.helper.customview.LoaderTextView
                        android:id="@+id/tv_price"
                        style="@style/tv_book_tag"
                        android:textColor="@color/pub_black"
                        app:use_gradient="true"/>

                    <prin.open.uniflow.helper.customview.LoaderTextView
                        android:id="@+id/tv_publish_time"
                        style="@style/tv_book_tag"
                        android:textColor="@color/pub_black"
                        app:use_gradient="true"/>

                    <prin.open.uniflow.helper.customview.LoaderTextView
                        android:id="@+id/tv_grade"
                        style="@style/tv_book_tag"
                        android:textColor="@color/pub_black"
                        app:use_gradient="true"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blank_space"
                android:layout_marginTop="10dp"/>

            <prin.open.uniflow.helper.customview.LoaderTextView
                android:id="@+id/tv_content_section_1"
                style="@style/tv_book_content"
                android:layout_marginTop="8dp"
                android:paddingTop="0dp"
                app:use_gradient="true"/>

            <prin.open.uniflow.helper.customview.LoaderTextView
                android:id="@+id/tv_content_section_2"
                style="@style/tv_book_content"
                android:paddingTop="0dp"
                app:use_gradient="true"/>

            <prin.open.uniflow.helper.customview.LoaderTextView
                android:id="@+id/tv_content_section_3"
                style="@style/tv_book_content"
                android:paddingTop="0dp"
                app:use_gradient="true"/>

            <prin.open.uniflow.helper.customview.LoaderTextView
                android:id="@+id/tv_from"
                style="@style/tv_normal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="left"
                android:paddingLeft="8dp"
                app:use_gradient="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>

